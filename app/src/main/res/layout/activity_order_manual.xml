<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context=".OrderManualActivity">

    <ImageView
        android:id="@+id/logo_amigo_cake"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Amigo Cake Logo"
        android:src="@drawable/amigo_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Profile Icon"
        android:src="@drawable/admin_hitam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#3A3135" />

    <TextView
        android:id="@+id/title_order_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order manual"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3A3135"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logo_amigo_cake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/order_form_container_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/pink_kotak_order_manual"
        app:layout_constraintTop_toBottomOf="@id/title_order_manual"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_form_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/label_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:background="@drawable/garis_putihh"
                android:inputType="textPersonName"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_customer_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_customer_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Contact"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_customer_name"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_customer_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="phone"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_customer_contact"
                android:autofillHints="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_customer_contact"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="textPostalAddress"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_address"
                android:autofillHints="postalAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_address"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="text"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_product_name"
                android:autofillHints=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_diameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diameter (Size)"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_product_name"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_diameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="number"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_diameter"
                android:autofillHints=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_diameter"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="number"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_quantity"
                android:autofillHints=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/label_pickup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Date"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_quantity" app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_pickup_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="date"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@id/label_pickup_date"
                android:autofillHints="date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price (Rp)"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_pickup_date"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/garis_putihh"
                android:inputType="number"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/label_price"
                android:autofillHints=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/button_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#FFFFFF"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="Save Order"
                android:textAllCaps="false"
                android:textColor="#3A3135"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/input_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kotakbawah1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/nav_home_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/nav_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Home Icon"
                    app:srcCompat="@drawable/homeputih"
                    app:tint="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_manual_order_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/nav_manual_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Manual Order Icon"
                    app:srcCompat="@drawable/edit"
                    app:tint="#982B15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual Order"
                    android:textSize="10sp"
                    android:textColor="#982B15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/nav_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Order Review Icon"
                    app:srcCompat="@drawable/review"
                    app:tint="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recap"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_order_list_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/nav_order_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Order List Icon"
                    app:srcCompat="@drawable/list"
                    app:tint="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order List"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_topic_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/nav_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Topic Management Icon"
                    app:srcCompat="@drawable/buku"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popup_order_successful"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/bg_popup_success"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order\nSuccessful"
                android:gravity="center"
                android:textColor="#59444C" android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/popup_button_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/popup_button_close"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#FFFFFF"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="#59444C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="25dp"
                app:strokeColor="#59444C" app:strokeWidth="1dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>