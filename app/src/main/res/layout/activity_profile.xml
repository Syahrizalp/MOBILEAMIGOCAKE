<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context=".ProfileActivity">

    <!-- HEADER DAN TOMBOL KEMBALI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_profile"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Tombol Kembali"
            android:src="@drawable/back"
            app:tint="#3A3135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/amigo_logo_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Amigo Cake Logo"
            android:src="@drawable/amigo_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- KONTEN UTAMA PROFILE -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Informasi Akun Admin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3A3135"
        app:layout_constraintTop_toBottomOf="@id/header_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- KARTU INFORMASI AKUN -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_account_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"> <!-- Padding diperbesar sedikit -->

            <!-- FOTO/IKON PROFIL (Baru Ditambahkan) -->
            <ImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Avatar Admin"
                android:src="@drawable/admin_hitam"
                app:tint="#3A3135"
                android:layout_marginBottom="16dp"/>

            <!-- Nama Admin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Admin:"
                android:textColor="#6E6266"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="JaneDoe"
                android:textColor="#3A3135"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" /> <!-- Warna pemisah lebih lembut -->

            <!-- Email Admin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Akun:"
                android:textColor="#6E6266"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="janedoe@amigo.com"
                android:textColor="#3A3135"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TOMBOL LOGOUT -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="LOGOUT"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#D80000"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_account_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OPSI TAMBAHAN (Tombol Edit Profile) -->


</androidx.constraintlayout.widget.ConstraintLayout>