<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp">

        <!-- Ikon Kategori -->
        <ImageView
            android:id="@+id/ivTopicIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="Category Icon"
            android:importantForAccessibility="no"
            android:src="@drawable/ikon_tag"
            app:tint="@color/dark_gray_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nama Kategori -->
        <TextView
            android:id="@+id/tvTopicName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray_title"
            android:importantForAccessibility="yes"
            app:layout_constraintStart_toEndOf="@id/ivTopicIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEditTopic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Kue Ulang Tahun Premium" />

        <!-- Tombol EDIT -->
        <ImageView
            android:id="@+id/btnEditTopic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Edit Kategori"
            android:src="@drawable/ikon_edit"
            app:tint="@color/dark_gray_title"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteTopic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Tombol HAPUS -->
        <ImageView
            android:id="@+id/btnDeleteTopic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Hapus Kategori"
            android:src="@drawable/ikon_delete"
            app:tint="@color/red_production"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
